<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brookmanholmes.bma">

    <application
        android:name="com.brookmanholmes.bma.MyApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/mybackupscheme"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyAppTheme">

        <activity
            android:name=".ui.IntroActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.newmatchwizard.CreateNewMatchActivity"
            android:theme="@style/MyAppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".ui.matchinfo.MatchInfoActivity"/>

        <activity
            android:name=".ui.profile.PlayerProfileActivity"
            android:label="Player Profile"/>
    </application>

</manifest>