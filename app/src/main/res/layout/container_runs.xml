<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/title"
    android:columnCount="3"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:rowCount="4"
    android:useDefaultMargins="true"
    tools:showIn="@layout/card_run_outs">

    <TextView
        android:id="@+id/tvEarlyWinsOpponent"
        style="@style/player_stats"
        android:layout_alignBottom="@+id/tvEarlyWinsTitle"
        android:layout_alignParentEnd="true"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="3"
        android:text="0"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvEarlyWinsPlayer"
        style="@style/player_stats"
        android:layout_alignBottom="@+id/tvEarlyWinsTitle"
        android:layout_alignParentStart="true"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="3"
        android:text="0"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvEarlyWinsTitle"
        style="@style/player_stats_title"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="3"
        android:text="Early wins"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvTierOneRunsTitle"
        style="@style/player_stats_title"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="1"
        android:text="Table runs"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvTierOneRunsPlayer"
        style="@style/player_stats"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="1"
        android:text="0"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvTierOneRunsOpponent"
        style="@style/player_stats"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="1"
        android:text="0"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvMaxBallRunsOpponent"
        style="@style/player_stats"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="0"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvMaxBallRunsPlayer"
        style="@style/player_stats"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="0"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvMaxBallRunsTitle"
        style="@style/player_stats_title"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="Break and runs"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvFiveBallRunsTitle"
        style="@style/player_stats_title"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="2"
        android:text="Five ball outs"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvFiveBallRunsOpponent"
        style="@style/player_stats"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="2"
        android:text="0"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvFiveBallRunsPlayer"
        style="@style/player_stats"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="2"
        android:text="0"
        android:textColor="@color/primary_text" />
</GridLayout>