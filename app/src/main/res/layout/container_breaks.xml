<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="breaks"
            type="com.brookmanholmes.bma.ui.matchinfo.BreaksBinder" />
    </data>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        style="@style/match_info_grid"
        tools:showIn="@layout/card_breaks">

        <TextView
            android:id="@+id/tvBreakTotalPlayer"
            style="@style/player_stats"
            android:layout_gravity="center"
            android:textColor="@color/primary_text" />

        <TextView
            style="@style/player_stats"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:text="@string/title_successful_break"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tvBreakTotalOpponent"
            style="@style/player_stats"
            android:layout_gravity="center"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tvAvgBreakBallsPlayer"
            style="@style/player_stats"
            android:layout_gravity="center"
            android:tag="disappearable"
            android:textColor="@color/secondary_text" />

        <TextView
            style="@style/player_stats"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:tag="disappearable"
            android:text="@string/title_avg_break_balls"
            android:textColor="@color/secondary_text" />

        <TextView
            android:id="@+id/tvAvgBreakBallsOpponent"
            style="@style/player_stats"
            android:layout_gravity="center"
            android:tag="disappearable"
            android:textColor="@color/secondary_text" />

        <TextView
            android:id="@+id/tvBreakContinuationsPlayer"
            style="@style/player_stats"
            android:layout_gravity="center"
            android:tag="disappearable"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tvBreakContinuationsTitle"
            style="@style/player_stats"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:tag="disappearable"
            android:text="@string/title_break_continuations"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tvBreakContinuationsOpponent"
            style="@style/player_stats"
            android:layout_gravity="center"
            android:tag="disappearable"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tvBreakFoulsPlayer"
            style="@style/player_stats"
            android:layout_gravity="center"
            android:tag="disappearable"
            android:textColor="@color/secondary_text" />

        <TextView
            style="@style/player_stats"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:tag="disappearable"
            android:text="@string/title_break_fouls"
            android:textColor="@color/secondary_text" />

        <TextView
            android:id="@+id/tvBreakFoulsOpponent"
            style="@style/player_stats"
            android:layout_gravity="center"
            android:tag="disappearable"
            android:textColor="@color/secondary_text" />

        <TextView
            android:id="@+id/tvBreakWinsPlayer"
            style="@style/player_stats"
            android:layout_gravity="center"
            android:tag="disappearable"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tvBreakWinsTitle"
            style="@style/player_stats"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:tag="disappearable"
            android:text="@string/title_break_wins"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/tvBreakWinsOpponent"
            style="@style/player_stats"
            android:layout_gravity="center"
            android:tag="disappearable"
            android:textColor="@color/primary_text" />

    </GridLayout>
</layout>