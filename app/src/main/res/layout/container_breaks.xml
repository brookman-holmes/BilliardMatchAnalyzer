<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/title"
    android:columnCount="3"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:rowCount="5"
    android:useDefaultMargins="true"
    tools:showIn="@layout/card_breaks">

    <TextView
        android:id="@+id/tvAvgBreakBallsTitle"
        style="@style/player_stats_title"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="2"
        android:text="Average balls / break"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvBreakTotalTitle"
        style="@style/player_stats_title"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="1"
        android:text="Ball on break / breaks"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvBreakContinuationsTitle"
        style="@style/player_stats_title"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="Continuation on break"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvBreakScratchesTitle"
        style="@style/player_stats_title"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="3"
        android:text="Scratch on break"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvBreakWinsTitle"
        style="@style/player_stats_title"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="4"
        android:text="9 on the break"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvBreakTotalOpponent"
        style="@style/player_stats"
        android:layout_alignTop="@+id/tvBreakTotalPlayer"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="1"
        android:text="0/0"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvBreakWinsOpponent"
        style="@style/player_stats"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="4"
        android:text="0"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvBreakContinuationsOpponent"
        style="@style/player_stats"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="0"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvBreakScratchesOpponent"
        style="@style/player_stats"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="3"
        android:text="0"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvAvgBreakBallsOpponent"
        style="@style/player_stats"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="2"
        android:text="0/0"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvBreakTotalPlayer"
        style="@style/player_stats"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="1"
        android:text="0/0"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvBreakWinsPlayer"
        style="@style/player_stats"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="4"
        android:text="0"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvBreakContinuationsPlayer"
        style="@style/player_stats"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="0"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvBreakScratchesPlayer"
        style="@style/player_stats"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="3"
        android:text="0"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvAvgBreakBallsPlayer"
        style="@style/player_stats"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="2"
        android:text="0/0"
        android:textColor="@color/primary_text" />
</GridLayout>