<LinearLayout style="@style/WizardPageContainer"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical">

    <TextView style="@style/WizardPageTitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/hint_player_name"
                android:labelFor="@id/playerName">

                <AutoCompleteTextView
                    android:id="@+id/playerName"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:completionThreshold="1"
                    android:inputType="textCapWords"
                    android:textSize="16sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/hint_opponent_name"
                android:labelFor="@id/opponentName">

                <AutoCompleteTextView
                    android:id="@+id/opponentName"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:completionThreshold="1"
                    android:inputType="textCapWords"
                    android:textSize="16sp"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/hint_location">

                <EditText
                    android:id="@+id/location"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:inputType="textCapWords"
                    android:textSize="16sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_notes">

                <EditText
                    android:id="@+id/extra"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="textMultiLine"
                    android:minLines="4"
                    android:textSize="16sp"/>

            </android.support.design.widget.TextInputLayout>

            <CheckBox
                android:id="@+id/cbGhost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Play the ghost?"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>