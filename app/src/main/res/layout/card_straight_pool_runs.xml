<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="straightRuns"
            type="com.brookmanholmes.bma.ui.matchinfo.StraightPoolRunsBinder" />

        <import type="android.view.View" />
    </data>

    <view xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/card_view_style"
        class="android.support.v7.widget.CardView"
        android:visibility="@{straightRuns.showCard ? View.VISIBLE : View.GONE}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                bind:title="@{straightRuns}" />

            <include
                layout="@layout/container_straight_pool_runs"
                bind:straightRuns="@{straightRuns}" />

            <include
                layout="@layout/layout_bottom_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                bind:binder="@{straightRuns}" />
        </LinearLayout>
    </view>
</layout>