<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/turn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:textColor="@color/primary_text"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.brookmanholmes.bma.ui.view.HeatGraph
            android:id="@+id/heatGraph"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:hit_color="@color/colorAccentLight"
            app:hit_indicator="6dp"
            app:line_width="1dp" />

        <com.brookmanholmes.bma.ui.view.HowMissLayout
            android:id="@+id/aim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            app:hml_left_label="aim left"
            app:hml_right_label="aim right"
            app:hml_title="@string/title_aim" />

        <com.brookmanholmes.bma.ui.view.HowMissLayout
            android:id="@+id/speed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            app:hml_left_label="@string/title_speed_slow"
            app:hml_right_label="@string/title_speed_fast"
            app:hml_title="@string/title_speed" />

        <com.brookmanholmes.bma.ui.view.HowMissLayout
            android:id="@+id/cut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            app:hml_left_label="under cut"
            app:hml_right_label="over cut"
            app:hml_title="@string/title_cut" />

        <com.brookmanholmes.bma.ui.view.HowMissLayout
            android:id="@+id/kick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            app:hml_left_label="kick short"
            app:hml_right_label="kick long"
            app:hml_title="@string/title_kick_error" />

        <com.brookmanholmes.bma.ui.view.HowMissLayout
            android:id="@+id/bank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            app:hml_left_label="bank short"
            app:hml_right_label="bank long"
            app:hml_title="@string/title_bank_error" />

        <com.brookmanholmes.bma.ui.view.HowMissLayout
            android:id="@+id/masse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            app:hml_left_label="curve early"
            app:hml_right_label="curve late"
            app:hml_title="MassÃ©" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="5"
            android:text="Speed" />

        <com.brookmanholmes.bma.ui.view.BarGraphView
            android:id="@+id/speedGraph"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:padding="8dp"
            app:bgv_count="10"
            app:bgv_selected="4"
            app:bgv_spacing="6dp"
            app:bgv_text_size="10sp"
            app:bgv_width="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cbLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="5"
            android:text="CB->OB" />

        <com.brookmanholmes.bma.ui.view.BarGraphView
            android:id="@+id/cbGraph"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:padding="8dp"
            app:bgv_count="20"
            app:bgv_selected="4"
            app:bgv_spacing="6dp"
            app:bgv_text_size="10sp"
            app:bgv_width="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/obLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="5"
            android:text="OB->Pocket" />

        <com.brookmanholmes.bma.ui.view.BarGraphView
            android:id="@+id/obGraph"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:padding="8dp"
            app:bgv_count="20"
            app:bgv_selected="4"
            app:bgv_spacing="6dp"
            app:bgv_text_size="10sp"
            app:bgv_width="8dp" />
    </LinearLayout>

</LinearLayout>