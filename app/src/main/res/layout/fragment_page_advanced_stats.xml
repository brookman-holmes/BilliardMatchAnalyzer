<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        style="@style/WizardPageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            style="@style/WizardPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/playerName"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Player 1" />

            <TextView
                style="@style/player_stats"
                android:text="How shots are missed\n(Left of ball, Right of ball, etc.)"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/opponentName"
                style="@style/Base.TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Player 2" />
        </LinearLayout>

        <android.support.v7.widget.GridLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:columnCount="3"
            app:useDefaultMargins="true">

            <CheckBox
                android:checked="true"
                android:enabled="false"
                app:layout_columnWeight="1"
                app:layout_gravity="center_horizontal" />

            <TextView
                style="@style/player_stats"
                android:text="Balls made and turn endings" />

            <CheckBox
                android:checked="true"
                android:enabled="false"
                app:layout_columnWeight="1"
                app:layout_gravity="center_horizontal" />

            <CheckBox
                android:id="@+id/cbShotTypePlayer"
                app:layout_columnWeight="1"
                app:layout_gravity="center_horizontal" />

            <TextView
                style="@style/player_stats"
                android:text="Shot types of misses" />

            <CheckBox
                android:id="@+id/cbShotTypeOpponent"
                app:layout_columnWeight="1"
                app:layout_gravity="center_horizontal" />

            <CheckBox
                android:id="@+id/cbAnglePlayer"
                android:enabled="false"
                app:layout_columnWeight="1"
                app:layout_gravity="right" />

            <TextView
                style="@style/player_stats"
                android:text="Detailed angles" />

            <CheckBox
                android:id="@+id/cbAngleOpponent"
                android:enabled="false"
                app:layout_columnWeight="1"
                app:layout_gravity="left" />

            <CheckBox
                android:id="@+id/cbAngleSimplePlayer"
                android:enabled="false"
                app:layout_columnWeight="1"
                app:layout_gravity="right" />

            <TextView
                style="@style/player_stats"
                android:text="Simple angles" />

            <CheckBox
                android:id="@+id/cbAngleSimpleOpponent"
                android:enabled="false"
                app:layout_columnWeight="1"
                app:layout_gravity="left" />

            <CheckBox
                android:id="@+id/cbHowPlayer"
                app:layout_columnWeight="1"
                app:layout_gravity="center_horizontal" />

            <TextView
                style="@style/player_stats"
                android:text="How shots are missed\n(Left of ball, Right of ball, etc.)" />

            <CheckBox
                android:id="@+id/cbHowOpponent"
                app:layout_columnWeight="1"
                app:layout_gravity="center_horizontal" />

            <CheckBox
                android:id="@+id/cbCuePlayer"
                app:layout_columnWeight="1"
                app:layout_gravity="center_horizontal" />

            <TextView
                style="@style/player_stats"
                android:text="Cue tip placement" />

            <CheckBox
                android:id="@+id/cbCueOpponent"
                app:layout_columnWeight="1"
                app:layout_gravity="center_horizontal" />

            <CheckBox
                android:id="@+id/cbBallDistPlayer"
                app:layout_columnWeight="1"
                app:layout_gravity="center_horizontal" />

            <TextView
                style="@style/player_stats"
                android:text="Cue/object ball distance" />

            <CheckBox
                android:id="@+id/cbBallDistOpponent"
                app:layout_columnWeight="1"
                app:layout_gravity="center_horizontal" />

            <CheckBox
                android:id="@+id/cbSpeedPlayer"
                app:layout_columnWeight="1"
                app:layout_gravity="center_horizontal" />

            <TextView
                style="@style/player_stats"
                android:text="Cue ball speed" />

            <CheckBox
                android:id="@+id/cbSpeedOpponent"
                app:layout_columnWeight="1"
                app:layout_gravity="center_horizontal" />

            <CheckBox
                android:id="@+id/cbSafetiesPlayer"
                app:layout_columnWeight="1"
                app:layout_gravity="center_horizontal" />

            <TextView
                style="@style/player_stats"
                android:text="Safeties\n(full/partial hooks, etc.)" />

            <CheckBox
                android:id="@+id/cbSafetiesOpponent"
                app:layout_columnWeight="1"
                app:layout_gravity="center_horizontal" />

            <Space />

            <Space />

            <Space />

        </android.support.v7.widget.GridLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>