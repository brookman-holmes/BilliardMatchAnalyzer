<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/background_light"
              android:orientation="vertical"
              android:paddingBottom="8dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.brookmanholmes.billiardmatchanalyzer.ui.RoundedLetterView
            android:id="@+id/playerIndicator"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            app:backgroundColorValue="@color/colorPrimary"
            app:titleSize="28dp"
            app:titleText=""/>

        <TextView
            android:id="@+id/turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="New Text"
            android:textColor="@color/primary_text"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">

        <TextView
            android:id="@+id/tvShootingPct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Text"
            />

        <TextView
            android:id="@+id/tvSafetyPct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Text"
            />

        <TextView
            android:id="@+id/tvBreakPct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="New Text"
            />

    </LinearLayout>

    <include layout="@layout/ball_container"/>

    <RelativeLayout android:id="@+id/advStatsContainer"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

        <TextView
            android:id="@+id/shotType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/angel"
            android:padding="8dp"
            android:text="Shot Type"/>

        <TextView
            android:id="@+id/shotSubType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/shotType"
            android:padding="8dp"
            android:text="Subtype"/>

        <TextView
            android:id="@+id/angel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Angel(s)"/>

        <TextView
            android:id="@+id/howMiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shotType"
            android:padding="8dp"
            android:text="How"/>

        <TextView
            android:id="@+id/whyMiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/howMiss"
            android:padding="8dp"
            android:text="Why"/>
    </RelativeLayout>

</LinearLayout>