<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:text="New Text"
            android:textColor="@color/primary_text"
            android:textSize="16sp"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:useDefaultMargins="false">

        <ImageView
            android:id="@+id/shootingLine"
            android:layout_width="10sp"
            android:layout_height="10sp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ball_background"
            android:tint="@color/almost_good"
            android:layout_gravity="center"
            android:layout_columnWeight="1"/>

        <TextView
            android:id="@+id/tvShootingPct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".750"
            android:textColor="@color/primary_text"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/safetyLine"
            android:layout_width="10sp"
            android:layout_height="10sp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ball_background"
            android:tint="@color/almost_good"
            android:layout_gravity="center"
            android:layout_columnWeight="1"/>

        <TextView
            android:id="@+id/tvSafetyPct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".750"
            android:textColor="@color/primary_text"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/breakingLine"
            android:layout_width="10sp"
            android:layout_height="10sp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ball_background"
            android:tint="@color/almost_good"
            android:layout_gravity="center"
            android:layout_columnWeight="1"/>

        <TextView
            android:id="@+id/tvBreakPct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".750"
            android:textColor="@color/primary_text"
            android:layout_columnWeight="1"/>

    </GridLayout>

    <include
        layout="@layout/ball_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>