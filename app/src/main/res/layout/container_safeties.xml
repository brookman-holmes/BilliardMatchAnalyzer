<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/title"
    android:columnCount="3"
    android:columnOrderPreserved="true"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:rowCount="6"
    android:useDefaultMargins="true"
    tools:showIn="@layout/card_safeties">

    <TextView
        android:id="@+id/tvSafetyPctPlayer"
        android:layout_gravity="center"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvSafetyPercentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/title_safety_pct"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvSafetyPctOpponent"
        android:layout_gravity="center"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvSafetiesAttemptedPlayer"
        android:layout_gravity="center"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/safetiesTitleTV"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:text="@string/title_safeties_made"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvSafetiesAttemptedOpponent"
        android:layout_gravity="center"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvSafetyScratchesPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvSafetyScratchesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/title_safety_fouls"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvSafetyScratchesOpponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvSafetyEscapesPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvSafetyEscapesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/title_safety_escapes"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvSafetyEscapesOpponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvSafetyReturnsPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvSafetyReturnsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/title_safeties_returned"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvSafetyReturnsOpponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvForcedErrorsPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvForcedErrorsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/title_forced_errors"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvForcedErrorsOpponent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/secondary_text" />
</GridLayout>