<?xml version="1.0" encoding="utf-8"?>
<GridLayout android:id="@+id/container"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:columnCount="3"
            android:columnOrderPreserved="true"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:useDefaultMargins="true"
            tools:showIn="@layout/card_shooting_pct">

    <TextView
        android:id="@+id/tvShootingPctPlayer"
        style="@style/player_stats"
        android:layout_gravity="center"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/shootingPctTitle"
        style="@style/player_stats"
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:text="@string/title_shooting_pct"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/tvShootingPctOpponent"
        style="@style/player_stats"
        android:layout_gravity="center"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/tvBallTotalPlayer"
        style="@style/player_stats"
        android:layout_gravity="center"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/tvBallTotalTitle"
        style="@style/player_stats"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="@string/title_shots_made"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/tvBallTotalOpponent"
        style="@style/player_stats"
        android:layout_gravity="center"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/tvAvgBallsTurnPlayer"
        style="@style/player_stats"
        android:layout_gravity="center"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/tvAvgBallsTitle"
        style="@style/player_stats"
        android:layout_gravity="center"
        android:text="@string/title_avg_balls_turn"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/tvAvgBallsTurnOpponent"
        style="@style/player_stats"
        android:layout_gravity="center"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/tvScratchesPlayer"
        style="@style/player_stats"
        android:layout_gravity="center"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/tvScratchesTitle"
        style="@style/player_stats"
        android:layout_gravity="center"
        android:text="@string/title_shooting_fouls"
        android:textColor="@color/secondary_text"/>

    <TextView
        android:id="@+id/tvScratchesOpponent"
        style="@style/player_stats"
        android:layout_gravity="center"
        android:textColor="@color/secondary_text"/>

</GridLayout>