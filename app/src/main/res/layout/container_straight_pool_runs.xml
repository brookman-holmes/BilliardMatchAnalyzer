<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="straightRuns"
            type="com.brookmanholmes.bma.ui.matchinfo.StraightPoolRunsBinder" />

        <import type="android.view.View" />
    </data>

    <android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/match_info_grid"
        tools:showIn="@layout/card_straight_pool_runs">

        <TextView
            style="@style/player_stats"
            android:text="@{straightRuns.playerMax}"
            android:textColor="@color/secondary_text"
            android:textStyle="bold" />

        <TextView
            style="@style/player_stats"
            android:text="High run (this match)"
            android:textColor="@color/secondary_text"
            app:layout_columnWeight="0" />

        <TextView
            style="@style/player_stats"
            android:text="@{straightRuns.opponentMax}"
            android:textColor="@color/secondary_text" />

        <TextView
            style="@style/player_stats"
            android:text="@{straightRuns.playerMean}"
            android:textColor="@color/primary_text" />


        <TextView
            style="@style/player_stats"
            android:text="Average run length"
            android:textColor="@color/primary_text"
            app:layout_columnWeight="0" />

        <TextView
            style="@style/player_stats"
            android:text="@{straightRuns.opponentMean}"
            android:textColor="@color/primary_text" />


        <TextView
            style="@style/player_stats"
            android:text="@{straightRuns.playerMedian}"
            android:textColor="@color/secondary_text"
            android:textStyle="bold" />

        <TextView
            style="@style/player_stats"
            android:text="Median run length"
            android:textColor="@color/secondary_text"
            app:layout_columnWeight="0" />

        <TextView
            style="@style/player_stats"
            android:text="@{straightRuns.opponentMedian}"
            android:textColor="@color/secondary_text" />

        <TextView
            style="@style/player_stats"
            android:text="@{straightRuns.playerShootingPct}"
            android:textColor="@color/primary_text"
            android:typeface="@{straightRuns.playerShootingBetter() ? `bold` : `normal`}" />

        <TextView
            style="@style/player_stats"
            android:text="@string/title_shooting_pct"
            android:textColor="@color/primary_text"
            app:layout_columnWeight="0" />

        <TextView
            style="@style/player_stats"
            android:text="@{straightRuns.opponentShootingPct}"
            android:textColor="@color/primary_text"
            android:typeface="@{straightRuns.opponentShootingBetter() ? `bold` : `normal`}" />

        <TextView
            style="@style/player_stats"
            android:text="@{@string/out_of(straightRuns.playerShotsMade, straightRuns.playerShots)}"
            android:textColor="@color/secondary_text" />

        <TextView
            style="@style/player_stats"
            android:text="@string/title_shots_made"
            android:textColor="@color/secondary_text"
            app:layout_columnWeight="0" />

        <TextView
            style="@style/player_stats"
            android:text="@{@string/out_of(straightRuns.opponentShotsMade, straightRuns.opponentShots)}"
            android:textColor="@color/secondary_text" />

        <TextView
            style="@style/player_stats"
            android:text="@{straightRuns.playerFouls}"
            android:textColor="@color/primary_text"
            android:typeface="@{straightRuns.playerFoulsBetter() ? `bold` : `normal`}"
            android:visibility="@{straightRuns.expanded ? View.VISIBLE : View.GONE}" />

        <TextView
            style="@style/player_stats"
            android:text="@string/title_shooting_fouls"
            android:textColor="@color/primary_text"
            android:visibility="@{straightRuns.expanded ? View.VISIBLE : View.GONE}"
            app:layout_columnWeight="0" />

        <TextView
            style="@style/player_stats"
            android:text="@{straightRuns.opponentFouls}"
            android:textColor="@color/primary_text"
            android:typeface="@{straightRuns.opponentFoulsBetter() ? `bold` : `normal`}"
            android:visibility="@{straightRuns.expanded ? View.VISIBLE : View.GONE}" />
    </android.support.v7.widget.GridLayout>
</layout>