<?xml version="1.0" encoding="utf-8"?><!--suppress AndroidUnknownAttribute -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="shooting"
            type="com.brookmanholmes.bma.ui.matchinfo.ShootingBinder" />

        <import type="android.view.View" />
    </data>

    <android.support.v7.widget.CardView
        style="@style/card_view_style"
        android:visibility="@{shooting.showCard ? View.VISIBLE : View.GONE}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@{shooting}" />

            <android.support.v7.widget.GridLayout style="@style/match_info_grid">

                <TextView
                    style="@style/player_stats"
                    android:text="@{shooting.playerShootingPct}"
                    android:textColor="@color/primary_text"
                    android:typeface="@{shooting.highlightShooting() == 1 ? `bold` : `normal`}" />

                <TextView
                    style="@style/player_stats"
                    android:text="@string/title_shooting_pct"
                    android:textColor="@color/primary_text"
                    app:layout_columnWeight="0" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{shooting.opponentShootingPct}"
                    android:textColor="@color/primary_text"
                    android:typeface="@{shooting.highlightShooting() == -1 ? `bold` : `normal`}" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{@string/out_of(shooting.playerShotsMade, shooting.playerShots)}"
                    android:textColor="@color/secondary_text" />

                <TextView
                    style="@style/player_stats"
                    android:text="@string/title_shots_made"
                    android:textColor="@color/secondary_text"
                    app:layout_columnWeight="0" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{@string/out_of(shooting.opponentShotsMade, shooting.opponentShots)}"
                    android:textColor="@color/secondary_text" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{shooting.playerAvg}"
                    android:textColor="@color/primary_text"
                    android:typeface="@{shooting.highlightAvg() == 1 ? `bold` : `normal`}"
                    android:visibility="@{shooting.expanded ? View.VISIBLE : View.GONE}" />

                <TextView
                    style="@style/player_stats"
                    android:text="@string/title_avg_balls_turn"
                    android:textColor="@color/primary_text"
                    android:visibility="@{shooting.expanded ? View.VISIBLE : View.GONE}"
                    app:layout_columnWeight="0" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{shooting.opponentAvg}"
                    android:textColor="@color/primary_text"
                    android:typeface="@{shooting.highlightAvg() == -1 ? `bold` : `normal`}"
                    android:visibility="@{shooting.expanded ? View.VISIBLE : View.GONE}" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{shooting.playerFouls}"
                    android:textColor="@color/secondary_text"
                    android:typeface="@{shooting.highlightFouls() == 1 ? `bold` : `normal`}"
                    android:visibility="@{shooting.expanded ? View.VISIBLE : View.GONE}" />

                <TextView
                    style="@style/player_stats"
                    android:text="@string/title_shooting_fouls"
                    android:textColor="@color/secondary_text"
                    android:visibility="@{shooting.expanded ? View.VISIBLE : View.GONE}"
                    app:layout_columnWeight="0" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{shooting.opponentFouls}"
                    android:textColor="@color/secondary_text"
                    android:typeface="@{shooting.highlightFouls() == -1 ? `bold` : `normal`}"
                    android:visibility="@{shooting.expanded ? View.VISIBLE : View.GONE}" />

            </android.support.v7.widget.GridLayout>

            <include
                layout="@layout/layout_bottom_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:binder="@{shooting}" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>