<?xml version="1.0" encoding="utf-8"?><!--suppress AndroidUnknownAttribute -->
<view xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/card_view_style"
    class="android.support.v7.widget.CardView"
    android:elevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgGameType"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="false"
                android:src="@drawable/nine_ball" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            android:paddingStart="16dp"
            android:paddingTop="24dp">

            <TextView
                android:id="@+id/players"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:minLines="1"
                android:text="Player vs Player"
                android:textColor="@color/abc_primary_text_disable_only_material_light"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/breakType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateLoc"
                android:text="Alternate break"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dateLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/players"
                android:maxLines="2"
                android:maxWidth="300dp"
                android:text="Date @ Location"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/matchPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/container"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

        </RelativeLayout>

        <include
            android:id="@+id/bottom_icons"
            layout="@layout/card_bottom_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/matchPreview"
            android:layout_marginTop="-16dp" />

    </RelativeLayout>
</view>