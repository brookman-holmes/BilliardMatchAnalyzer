<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        style="@style/WizardPageTitle2" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/ballGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        app:columnCount="3"
        app:useDefaultMargins="true">

        <ImageView
            android:id="@+id/one_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/one_ball_level" />

        <ImageView
            android:id="@+id/two_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/two_ball_level" />

        <ImageView
            android:id="@+id/three_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/three_ball_level" />

        <ImageView
            android:id="@+id/four_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/four_ball_level" />

        <ImageView
            android:id="@+id/five_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/five_ball_level" />

        <ImageView
            android:id="@+id/six_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/six_ball_level" />

        <ImageView
            android:id="@+id/seven_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/seven_ball_level" />

        <ImageView
            android:id="@+id/eight_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/eight_ball_level" />

        <ImageView
            android:id="@+id/nine_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/nine_ball_level" />

        <ImageView
            android:id="@+id/ten_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            app:layout_columnSpan="3"
            app:layout_gravity="center_horizontal"
            android:src="@drawable/ten_ball_level" />
    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/buttonRunOut"
        style="?android:borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:visibility="gone" />
</RelativeLayout>