<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shootingPctGrid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingEnd="8dp"
    android:paddingStart="8dp"
    tools:showIn="@layout/row_turn">

    <ImageView
        android:id="@+id/shootingLine"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/circle"
        android:tint="@color/almost_good" />

    <TextView
        android:id="@+id/tvShootingPct"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Shooting .667"
        android:textSize="@dimen/shooting_pct_container_text_size" />

    <ImageView
        android:id="@+id/safetyLine"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/circle"
        android:tint="@color/almost_good" />

    <TextView
        android:id="@+id/tvSafetyPct"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Shooting .667"
        android:textSize="@dimen/shooting_pct_container_text_size" />

    <ImageView
        android:id="@+id/breakingLine"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/circle"
        android:tint="@color/almost_good" />

    <TextView
        android:id="@+id/tvBreakPct"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Shooting .667"
        android:textSize="@dimen/shooting_pct_container_text_size" />

</LinearLayout>