<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shootingPctGrid"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:showIn="@layout/row_turn">

    <ImageView
        android:id="@+id/shootingLine"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/ball_background"
        android:tint="@color/almost_good"
        app:layout_gravity="center" />

    <TextView
        android:id="@+id/tvShootingPct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/primary_text"
        app:layout_columnWeight="1" />

    <ImageView
        android:id="@+id/safetyLine"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/ball_background"
        android:tint="@color/almost_good"
        app:layout_gravity="center" />

    <TextView
        android:id="@+id/tvSafetyPct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        app:layout_columnWeight="1" />

    <ImageView
        android:id="@+id/breakingLine"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/ball_background"
        android:tint="@color/almost_good"
        app:layout_gravity="center" />

    <TextView
        android:id="@+id/tvBreakPct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        app:layout_columnWeight="1" />

</android.support.v7.widget.GridLayout>