<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:useDefaultMargins="false"
    tools:showIn="@layout/row_turn"
    android:id="@+id/shootingPctGrid">

    <ImageView
        android:id="@+id/shootingLine"
        android:layout_width="10sp"
        android:layout_height="10sp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ball_background"
        android:tint="@color/almost_good"
        android:layout_gravity="center"
        android:layout_columnWeight="1" />

    <TextView
        android:id="@+id/tvShootingPct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shooting .750"
        android:textColor="@color/primary_text"
        android:layout_columnWeight="1" />

    <ImageView
        android:id="@+id/safetyLine"
        android:layout_width="10sp"
        android:layout_height="10sp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ball_background"
        android:tint="@color/almost_good"
        android:layout_gravity="center"
        android:layout_columnWeight="1" />

    <TextView
        android:id="@+id/tvSafetyPct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Safeties .750"
        android:textColor="@color/primary_text"
        android:layout_columnWeight="1" />

    <ImageView
        android:id="@+id/breakingLine"
        android:layout_width="10sp"
        android:layout_height="10sp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ball_background"
        android:tint="@color/almost_good"
        android:layout_gravity="center"
        android:layout_columnWeight="1" />

    <TextView
        android:id="@+id/tvBreakPct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breaking .750"
        android:textColor="@color/primary_text"
        android:layout_columnWeight="1" />

</GridLayout>