<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addNewInningDialogBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/title"
        style="@style/WizardPageTitle"
        android:textSize="20sp" />

    <GridLayout
        android:id="@+id/ballGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:columnCount="5"
        android:padding="16dp"
        android:rowCount="3"
        android:useDefaultMargins="true"
        android:visibility="visible">

        <ImageView
            android:id="@+id/one_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/one_ball" />

        <ImageView
            android:id="@+id/two_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/two_ball" />

        <ImageView
            android:id="@+id/three_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/three_ball" />

        <ImageView
            android:id="@+id/four_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/four_ball" />

        <ImageView
            android:id="@+id/five_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/five_ball" />

        <ImageView
            android:id="@+id/six_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/six_ball" />

        <ImageView
            android:id="@+id/seven_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/seven_ball" />

        <ImageView
            android:id="@+id/eight_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/eight_ball" />

        <ImageView
            android:id="@+id/nine_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/nine_ball" />

        <ImageView
            android:id="@+id/ten_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/ten_ball" />

        <ImageView
            android:id="@+id/eleven_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/eleven_ball" />

        <ImageView
            android:id="@+id/twelve_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/twelve_ball" />

        <ImageView
            android:id="@+id/thirteen_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/thirteen_ball" />

        <ImageView
            android:id="@+id/fourteen_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/fourteen_ball" />

        <ImageView
            android:id="@+id/fifteen_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/fifteen_ball" />
    </GridLayout>
</RelativeLayout>