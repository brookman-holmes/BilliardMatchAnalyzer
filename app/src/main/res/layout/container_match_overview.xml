<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/title"
    android:columnCount="3"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:rowCount="6"
    android:useDefaultMargins="true"
    tools:showIn="@layout/card_match_overview">

    <include
        layout="@layout/divider"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_row="2" />

    <TextView
        android:id="@+id/tvWinTotalsPlayer"
        style="@style/player_stats"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="0"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/gamesWonTitle"
        style="@style/player_stats_title"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="@string/games_won_title"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvWinPercentPlayer"
        style="@style/player_stats"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="1"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvWinPercentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="1"
        android:text="@string/win_pct_title" />

    <TextView
        android:id="@+id/tvWinTotalsOpponent"
        style="@style/player_stats"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="0"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvWinPercentOpponent"
        style="@style/player_stats"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="1"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvTotalShotsTitle"
        style="@style/player_stats_title"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="4"
        android:text="@string/true_shots_made_title"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvTrueShootingPct"
        style="@style/player_stats_title"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="3"
        android:text="@string/tsp_title"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvAggressivenessRating"
        style="@style/player_stats_title"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="5"
        android:text="@string/ar_title"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvTrueShootingPctOpponent"
        style="@style/player_stats"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="3"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvAggressivenessRatingOpponent"
        style="@style/player_stats"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="5"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvTotalShotsOpponent"
        style="@style/player_stats"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="4"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvTrueShootingPctPlayer"
        style="@style/player_stats"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="3"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvAggressivenessRatingPlayer"
        style="@style/player_stats"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="5"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvTotalShotsPlayer"
        style="@style/player_stats"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="4"
        android:textColor="@color/secondary_text" />
</GridLayout>