<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/title"
    android:columnCount="3"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:rowCount="6"
    android:useDefaultMargins="true"
    tools:showIn="@layout/card_match_overview">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="2" />

    <TextView
        android:id="@+id/tvWinTotalsPlayer"
        style="@style/player_stats"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="0/0"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/gamesWonTitle"
        style="@style/container_title"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="Games won / total games"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvWinPercentPlayer"
        style="@style/player_stats"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="1"
        android:text=".000"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvWinPercentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="1"
        android:text="Win percentage" />

    <TextView
        android:id="@+id/tvWinTotalsOpponent"
        style="@style/player_stats"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="0"
        android:text="0/0"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvWinPercentOpponent"
        style="@style/player_stats"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="1"
        android:text=".000"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvTotalShotsTitle"
        style="@style/container_title"
        android:layout_below="@+id/tvTrueShootingPct"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="4"
        android:text="Total shots made / total shots"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvTrueShootingPct"
        style="@style/container_title"
        android:layout_below="@+id/tvAggressivenessRating"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="3"
        android:text="True shooting percentage"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvAggressivenessRating"
        style="@style/container_title"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="center"
        android:layout_row="5"
        android:text="Aggressiveness rating"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvTrueShootingPctOpponent"
        style="@style/player_stats"
        android:layout_alignTop="@+id/tvDefensiveShotsPlayer"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="3"
        android:text=".000"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvAggressivenessRatingOpponent"
        style="@style/player_stats"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="5"
        android:text=".000"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvTotalShotsOpponent"
        style="@style/player_stats"
        android:layout_column="2"
        android:layout_gravity="center"
        android:layout_row="4"
        android:text="0/0"
        android:textColor="@color/secondary_text" />

    <TextView
        android:id="@+id/tvTrueShootingPctPlayer"
        style="@style/player_stats"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="3"
        android:text=".000"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvAggressivenessRatingPlayer"
        style="@style/player_stats"
        android:layout_alignBottom="@+id/tvAggressivenessRating"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="5"
        android:text=".000"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/tvTotalShotsPlayer"
        style="@style/player_stats"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="4"
        android:text="0/0"
        android:textColor="@color/secondary_text" />
</GridLayout>