<?xml version="1.0" encoding="utf-8"?>
<GridLayout android:id="@+id/container"
            style="@style/match_info_grid"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:rowCount="5"
            tools:showIn="@layout/card_match_overview">

    <TextView
        android:id="@+id/tvWinPercentPlayer"
        style="@style/player_stats"
        android:textColor="@color/primary_text"
        />

    <TextView
        style="@style/player_stats"
        android:layout_columnWeight="1"
        android:text="@string/title_win_pct"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/tvWinPercentOpponent"
        style="@style/player_stats"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/tvWinTotalsPlayer"
        style="@style/player_stats"
        android:textColor="@color/secondary_text"
        android:tag="disappearable"/>

    <TextView
        style="@style/player_stats"
        android:layout_columnWeight="1"
        android:text="@string/title_games_won"
        android:textColor="@color/secondary_text"
        android:tag="disappearable"
        android:id="@+id/tvWinTotalTitle"/>

    <TextView
        android:id="@+id/tvWinTotalsOpponent"
        style="@style/player_stats"
        android:textColor="@color/secondary_text"
        android:tag="disappearable"/>

    <TextView
        android:id="@+id/tvTrueShootingPctPlayer"
        style="@style/player_stats"
        android:layout_gravity="center"
        android:textColor="@color/primary_text"/>

    <TextView
        style="@style/player_stats"
        android:layout_columnWeight="1"
        android:text="@string/title_tsp"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/tvTrueShootingPctOpponent"
        style="@style/player_stats"
        android:textColor="@color/primary_text"/>

    <TextView
        android:id="@+id/tvTotalShotsPlayer"
        style="@style/player_stats"
        android:textColor="@color/secondary_text"
        android:tag="disappearable"/>

    <TextView
        android:id="@+id/tvTotalShotsTitle"
        style="@style/player_stats"
        android:layout_columnWeight="1"
        android:text="@string/title_true_shots_made"
        android:textColor="@color/secondary_text"
        android:tag="disappearable"/>

    <TextView
        android:id="@+id/tvTotalShotsOpponent"
        style="@style/player_stats"
        android:textColor="@color/secondary_text"
        android:tag="disappearable"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTotalFoulsPlayer"
        style="@style/player_stats"
        android:textColor="@color/primary_text"
        android:tag="disappearable"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_fouls"
        style="@style/player_stats"
        android:textColor="@color/primary_text"
        android:tag="disappearable"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTotalFoulsOpponent"
        style="@style/player_stats"
        android:textColor="@color/primary_text"
        android:tag="disappearable"/>

    <TextView
        android:id="@+id/tvAggressivenessRatingPlayer"
        style="@style/player_stats"
        android:textColor="@color/secondary_text"
        android:tag="disappearable"/>

    <TextView
        android:id="@+id/tvAggressivenessRating"
        style="@style/player_stats"
        android:layout_columnWeight="1"
        android:text="@string/title_ar"
        android:textColor="@color/secondary_text"
        android:tag="disappearable"/>

    <TextView
        android:id="@+id/tvAggressivenessRatingOpponent"
        style="@style/player_stats"
        android:textColor="@color/secondary_text"
        android:tag="disappearable"/>

</GridLayout>