<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              style="@style/alert_dialog_padding">
    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foul options"
        android:textColor="@color/colorPrimary"/>



    <TextView
        style="@style/help_dialog_title"
        android:textColor="@color/primary_text"
        android:text="@string/foul_lost_game" />

    <TextView
        style="@style/help_dialog_text"
        android:text="The foul was on the break and you pocketed the 8 ball (APA rules), your opponent put you on two fouls and you fouled again, etc." />

    <TextView
        style="@style/help_dialog_title"
        android:textColor="@color/primary_text"
        android:text="@string/yes" />

    <TextView
        style="@style/help_dialog_text"
        android:text="The end result of your shot was that your opponent got ball in hand" />

    <TextView
        style="@style/help_dialog_title"
        android:textColor="@color/primary_text"
        android:text="@string/no" />

    <TextView
        style="@style/help_dialog_text"
        android:text="You did not foul" />
</LinearLayout>