<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/alert_dialog_padding"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_foul_options"
        android:textColor="@color/colorPrimary"/>



    <TextView
        style="@style/help_dialog_title"
        android:text="@string/foul_lost_game"
        android:textColor="@color/primary_text"/>

    <TextView
        style="@style/help_dialog_text"
        android:text="@string/description_lost_game"/>

    <TextView
        style="@style/help_dialog_title"
        android:text="@string/yes"
        android:textColor="@color/primary_text"/>

    <TextView
        style="@style/help_dialog_text"
        android:text="@string/description_foul"/>

    <TextView
        style="@style/help_dialog_title"
        android:text="@string/no"
        android:textColor="@color/primary_text"/>

    <TextView
        style="@style/help_dialog_text"
        android:text="@string/description_no_foul"/>
</LinearLayout>