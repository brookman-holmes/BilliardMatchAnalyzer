<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        style="@style/alert_dialog_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_types_of_misses"
            android:textColor="@color/colorPrimary" />

        <TextView
            style="@style/help_dialog_title"
            android:text="@string/miss_bank" />

        <TextView
            style="@style/help_dialog_text"
            android:text="@string/description_bank" />

        <TextView
            style="@style/help_dialog_title"
            android:text="@string/miss_carom" />

        <TextView
            style="@style/help_dialog_text"
            android:text="@string/description_carom" />

        <TextView
            style="@style/help_dialog_title"
            android:text="@string/miss_combo" />

        <TextView
            style="@style/help_dialog_text"
            android:text="@string/description_combo" />

        <TextView
            style="@style/help_dialog_title"
            android:text="@string/miss_cut" />

        <TextView
            style="@style/help_dialog_text"
            android:text="@string/description_cut" />

        <TextView
            style="@style/help_dialog_title"
            android:text="@string/miss_jump" />

        <TextView
            style="@style/help_dialog_text"
            android:text="@string/description_jump" />

        <TextView
            style="@style/help_dialog_title"
            android:text="@string/miss_kick" />

        <TextView
            style="@style/help_dialog_text"
            android:text="@string/description_kick" />

        <TextView
            style="@style/help_dialog_title"
            android:text="@string/miss_long" />

        <TextView
            style="@style/help_dialog_text"
            android:text="@string/description_long" />

        <TextView
            style="@style/help_dialog_title"
            android:text="@string/miss_masse" />

        <TextView
            style="@style/help_dialog_text"
            android:text="@string/description_masse" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>