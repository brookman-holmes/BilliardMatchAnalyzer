<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="@drawable/line_divider"
            android:orientation="horizontal" />

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/shotType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Shot type: type"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/angle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Angles:"
        android:textColor="@color/primary_text" />

    <TextView
        android:id="@+id/howMissDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="How the shot was missed:"
        android:textColor="@color/primary_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <com.brookmanholmes.bma.ui.view.HeatGraph
            android:id="@+id/heatGraph"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            app:hit_color="@color/colorAccentLight"
            app:hit_indicator="6dp"
            app:line_width="1dp" />

        <include layout="@layout/layout_distance_speed_graphs" />
    </LinearLayout>
</LinearLayout>