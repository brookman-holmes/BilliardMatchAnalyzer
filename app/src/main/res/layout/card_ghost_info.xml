<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="ghostAttempt"
            type="com.brookmanholmes.bma.ui.matchinfo.RunAttemptBinder" />

        <import type="android.view.View" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:text="Runs" />

        <android.support.v7.widget.CardView style="@style/card_view_style">

            <android.support.v7.widget.GridLayout
                style="@style/match_info_grid"
                android:padding="16dp">

                <TextView
                    style="@style/player_stats"
                    android:text="@string/this_session"
                    app:layout_column="1" />

                <TextView
                    style="@style/player_stats"
                    android:text="@string/lifetime"
                    app:layout_column="2" />

                <TextView
                    style="@style/player_stats"
                    android:gravity="start"
                    android:text="Games played"
                    android:textColor="@color/primary_text"
                    app:layout_columnWeight="0"
                    app:layout_gravity="start" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{ghostAttempt.currentGamesPlayed}"
                    android:textColor="@color/primary_text" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{ghostAttempt.totalGamesPlayed}"
                    android:textColor="@color/primary_text" />

                <TextView
                    style="@style/player_stats"
                    android:gravity="start"
                    android:text="Games won"
                    android:textColor="@color/secondary_text"
                    app:layout_columnWeight="0"
                    app:layout_gravity="start" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{ghostAttempt.currentWins}"
                    android:textColor="@color/secondary_text" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{ghostAttempt.totalWins}"
                    android:textColor="@color/secondary_text" />

                <TextView
                    style="@style/player_stats"
                    android:gravity="start"
                    android:text="@string/attempts_per_game"
                    android:textColor="@color/primary_text"
                    app:layout_columnWeight="0"
                    app:layout_gravity="start" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{ghostAttempt.currentAttempts}"
                    android:textColor="@color/primary_text" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{ghostAttempt.lifetimeAttempts}"
                    android:textColor="@color/primary_text" />

                <TextView
                    style="@style/player_stats"
                    android:gravity="start"
                    android:text="@string/title_break_runs"
                    android:textColor="@color/secondary_text"
                    app:layout_columnWeight="0"
                    app:layout_gravity="start" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{ghostAttempt.breakAndRuns}"
                    android:textColor="@color/secondary_text" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{ghostAttempt.breakAndRunTotal}"
                    android:textColor="@color/secondary_text" />

                <TextView
                    style="@style/player_stats"
                    android:gravity="start"
                    android:text="Break and run %"
                    android:textColor="@color/primary_text"
                    app:layout_columnWeight="0"
                    app:layout_gravity="start" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{ghostAttempt.breakAndRunPct}"
                    android:textColor="@color/primary_text" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{ghostAttempt.breakAndRunTotalPct}"
                    android:textColor="@color/primary_text" />

                <TextView
                    style="@style/player_stats"
                    android:gravity="start"
                    android:text="@string/average_run_length"
                    android:textColor="@color/secondary_text"
                    app:layout_columnWeight="0"
                    app:layout_gravity="start" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{ghostAttempt.currentMean}"
                    android:textColor="@color/secondary_text" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{ghostAttempt.lifetimeMean}"
                    android:textColor="@color/secondary_text" />

                <TextView
                    style="@style/player_stats"
                    android:gravity="start"
                    android:text="@string/title_avg_break_balls"
                    android:textColor="@color/primary_text"
                    app:layout_columnWeight="0"
                    app:layout_gravity="start" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{ghostAttempt.avgBreakBalls}"
                    android:textColor="@color/primary_text" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{ghostAttempt.avgBreakBallsTotal}"
                    android:textColor="@color/primary_text" />

            </android.support.v7.widget.GridLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</layout>