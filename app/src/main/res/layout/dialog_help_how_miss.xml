<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        style="@style/alert_dialog_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_miss_options"
            android:textColor="@color/colorPrimary" />

        <TextView
            style="@style/help_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/curve_late"
            android:textColor="@color/primary_text" />

        <TextView
            style="@style/help_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_curve_late" />

        <TextView
            style="@style/help_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/curve_early"
            android:textColor="@color/primary_text" />

        <TextView
            style="@style/help_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_curve_early" />

        <TextView
            style="@style/help_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aim_to_left"
            android:textColor="@color/primary_text" />

        <TextView
            style="@style/help_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_aim_left" />

        <TextView
            style="@style/help_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aim_to_right"
            android:textColor="@color/primary_text" />

        <TextView
            style="@style/help_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_aim_right" />

        <TextView
            style="@style/help_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thick_hit"
            android:textColor="@color/primary_text" />

        <TextView
            style="@style/help_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_thick" />

        <TextView
            style="@style/help_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thin_hit"
            android:textColor="@color/primary_text" />

        <TextView
            style="@style/help_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_thin" />

        <TextView
            style="@style/help_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank_short"
            android:textColor="@color/primary_text" />

        <TextView
            style="@style/help_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_short_bank" />

        <TextView
            style="@style/help_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank_long"
            android:textColor="@color/primary_text" />

        <TextView
            style="@style/help_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_long_bank" />

        <TextView
            style="@style/help_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kick_long"
            android:textColor="@color/primary_text" />

        <TextView
            style="@style/help_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_long_kick" />

        <TextView
            style="@style/help_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kick_short"
            android:textColor="@color/primary_text" />

        <TextView
            style="@style/help_dialog_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description_short_kick" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>