<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/card_apa_stats">

    <include
        android:id="@+id/title"
        layout="@layout/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <GridLayout
        android:id="@+id/container"
        style="@style/match_info_grid"
        android:rowCount="7">

        <TextView
            android:id="@+id/tvRankPlayer"
            style="@style/player_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_row="0"
            android:textColor="@color/primary_text"/>

        <TextView
            style="@style/player_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text="@string/rank"
            android:textColor="@color/primary_text"/>

        <TextView
            android:id="@+id/tvRankOpponent"
            style="@style/player_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_row="0"
            android:textColor="@color/primary_text"/>

        <TextView
            android:id="@+id/tvDefensiveShotsOpponent"
            style="@style/player_stats"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="3"
            android:textColor="@color/secondary_text"/>

        <TextView
            android:id="@+id/tvDefensiveShotsPlayer"
            style="@style/player_stats"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="3"
            android:textColor="@color/secondary_text"/>

        <TextView
            style="@style/player_stats"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="3"
            android:text="@string/defensive_shots"
            android:textColor="@color/secondary_text"/>

        <TextView
            android:id="@+id/tvPlayerPoints"
            style="@style/player_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="1"
            android:textColor="@color/secondary_text"/>

        <TextView
            android:id="@+id/tvPointsTitle"
            style="@style/player_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="@string/points"
            android:textColor="@color/secondary_text"/>

        <TextView
            android:id="@+id/tvOpponentPoints"
            style="@style/player_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_gravity="center"
            android:layout_row="1"
            android:textColor="@color/secondary_text"/>

        <TextView
            android:id="@+id/tvMatchPointsPlayer"
            style="@style/player_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="2"
            android:textColor="@color/primary_text"/>

        <TextView
            style="@style/player_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="2"
            android:text="@string/match_points"
            android:textColor="@color/primary_text"/>

        <TextView
            android:id="@+id/tvMatchPointsOpponent"
            style="@style/player_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_row="2"
            android:textColor="@color/primary_text"/>

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="8dp"
        android:useDefaultMargins="true">

        <TextView
            style="@style/player_stats"
            android:layout_column="0"
            android:layout_row="1"
            android:text="@string/innings"
            android:textColor="@color/primary_text"/>

        <TextView
            android:id="@+id/tvInningsOpponent"
            style="@style/player_stats"
            android:layout_row="1"
            android:textColor="@color/primary_text"/>

        <TextView
            android:id="@+id/tvDeadBallsTitle"
            style="@style/player_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:text="@string/dead_balls"
            android:textColor="@color/secondary_text"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvDeadBallsOpponent"
            style="@style/player_stats"
            android:layout_row="2"
            android:textColor="@color/secondary_text"
            android:visibility="gone"/>

    </GridLayout>

    <include
        layout="@layout/layout_bottom_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>