<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/alert_dialog_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/title_game_status"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/gameStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/breakInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/turnInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/playerFoulInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/opponentFoulInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/colorInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/pushStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/ballContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        app:columnCount="5"
        app:orientation="horizontal"
        tools:showIn="@layout/row_turn">

        <ImageView
            style="@style/ball_style"
            android:background="@drawable/ic_background"
            android:backgroundTint="@color/one_ball"
            android:src="@drawable/ic_one_ball"
            android:visibility="visible" />
        <ImageView
            style="@style/ball_style"
            android:background="@drawable/ic_background"
            android:backgroundTint="@color/two_ball"
            android:src="@drawable/ic_two_ball"
            android:visibility="visible" />
        <ImageView
            style="@style/ball_style"
            android:background="@drawable/ic_background"
            android:backgroundTint="@color/three_ball"
            android:src="@drawable/ic_three_ball"
            android:visibility="visible" />
        <ImageView
            style="@style/ball_style"
            android:background="@drawable/ic_background"
            android:backgroundTint="@color/four_ball"
            android:src="@drawable/ic_four_ball"
            android:visibility="visible" />
        <ImageView
            style="@style/ball_style"
            android:background="@drawable/ic_background"
            android:backgroundTint="@color/five_ball"
            android:src="@drawable/ic_five_ball"
            android:visibility="visible" />
        <ImageView
            style="@style/ball_style"
            android:background="@drawable/ic_background"
            android:backgroundTint="@color/six_ball"
            android:src="@drawable/ic_six_ball"
            android:visibility="visible" />
        <ImageView
            style="@style/ball_style"
            android:background="@drawable/ic_background"
            android:backgroundTint="@color/seven_ball"
            android:src="@drawable/ic_seven_ball"
            android:visibility="visible" />
        <ImageView
            style="@style/ball_style"
            android:background="@drawable/ic_background"
            android:backgroundTint="@color/eight_ball"
            android:src="@drawable/ic_eight_ball"
            android:visibility="visible" />
        <ImageView
            style="@style/ball_style"
            android:background="@drawable/ic_background_stripe"
            android:backgroundTint="@color/one_ball"
            android:src="@drawable/ic_nine_ball"
            android:visibility="visible" />
        <ImageView
            style="@style/ball_style"
            android:background="@drawable/ic_background_stripe"
            android:backgroundTint="@color/two_ball"
            android:src="@drawable/ic_ten_ball"
            android:visibility="visible" />
        <ImageView
            style="@style/ball_style"
            android:background="@drawable/ic_background_stripe"
            android:backgroundTint="@color/three_ball"
            android:src="@drawable/ic_eleven_ball"
            android:visibility="visible" />
        <ImageView
            style="@style/ball_style"
            android:background="@drawable/ic_background_stripe"
            android:backgroundTint="@color/four_ball"
            android:src="@drawable/ic_twelve_ball"
            android:visibility="visible" />
        <ImageView
            style="@style/ball_style"
            android:background="@drawable/ic_background_stripe"
            android:backgroundTint="@color/five_ball"
            android:src="@drawable/ic_thirteen_ball"
            android:visibility="visible" />
        <ImageView
            style="@style/ball_style"
            android:background="@drawable/ic_background_stripe"
            android:backgroundTint="@color/six_ball"
            android:src="@drawable/ic_fourteen_ball"
            android:visibility="visible" />
        <ImageView
            style="@style/ball_style"
            android:background="@drawable/ic_background_stripe"
            android:backgroundTint="@color/seven_ball"
            android:src="@drawable/ic_fifteen_ball"
            android:visibility="visible" />
    </android.support.v7.widget.GridLayout>

    <TextView
        android:id="@+id/playerStatsTracked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/opponentStatsTracked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>