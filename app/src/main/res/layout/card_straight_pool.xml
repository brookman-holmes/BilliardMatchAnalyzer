<?xml version="1.0" encoding="utf-8"?><!--suppress ALL -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="straight"
            type="com.brookmanholmes.bma.ui.matchinfo.StraightPoolBinder" />

        <variable
            name="winIndicator"
            type="com.brookmanholmes.bma.ui.matchinfo.WinIndicatorBinder" />
        <import type="android.view.View" />
    </data>

    <android.support.v7.widget.CardView
        style="@style/card_view_style"
        android:visibility="@{straight.showCard ? View.VISIBLE : View.GONE}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                bind:title="@{straight}" />

            <android.support.v7.widget.GridLayout style="@style/match_info_grid">

                <include
                    layout="@layout/container_win_pct_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_columnSpan="3"
                    bind:showWinPctLayout="@{straight.showCard}"
                    bind:winIndicator="@{winIndicator}" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{@string/out_of(straight.playerPoints, straight.playerPointsNeeded)}"
                    android:textColor="@color/primary_text" />

                <TextView
                    style="@style/player_stats"
                    android:text="@string/points"
                    android:textColor="@color/primary_text"
                    app:layout_columnWeight="0" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{@string/out_of(straight.opponentPoints, straight.opponentPointsNeeded)}"
                    android:textColor="@color/primary_text" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{straight.playerTsp}"
                    android:textColor="@color/secondary_text"
                    android:typeface="@{straight.highlightShooting() == 1 ? `bold` : `normal`}" />

                <TextView
                    style="@style/player_stats"
                    android:text="@string/title_tsp"
                    android:textColor="@color/secondary_text"
                    app:layout_columnWeight="0" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{straight.opponentTsp}"
                    android:textColor="@color/secondary_text"
                    android:typeface="@{straight.highlightShooting() == -1 ? `bold` : `normal`}" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{@string/out_of(straight.playerShotsSuccess, straight.playerTotalShots)}"
                    android:textColor="@color/primary_text" />

                <TextView
                    style="@style/player_stats"
                    android:text="@string/title_true_shots_made"
                    android:textColor="@color/primary_text"
                    app:layout_columnWeight="0" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{@string/out_of(straight.opponentShotsSuccess, straight.opponentTotalShots)}"
                    android:textColor="@color/primary_text" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{straight.playerAggRating}"
                    android:textColor="@color/secondary_text"
                    android:visibility="@{straight.expanded ? View.VISIBLE : View.GONE}" />

                <TextView
                    style="@style/player_stats"
                    android:text="@string/title_ar"
                    android:textColor="@color/secondary_text"
                    android:visibility="@{straight.expanded ? View.VISIBLE : View.GONE}"
                    app:layout_columnWeight="0" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{straight.opponentAggRating}"
                    android:textColor="@color/secondary_text"
                    android:visibility="@{straight.expanded ? View.VISIBLE : View.GONE}" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{straight.playerTotalFouls}"
                    android:textColor="@color/primary_text"
                    android:typeface="@{straight.highlightFouls() == 1 ? `bold` : `normal`}"
                    android:visibility="@{straight.expanded ? View.VISIBLE : View.GONE}" />

                <TextView
                    style="@style/player_stats"
                    android:text="@string/total_fouls"
                    android:textColor="@color/primary_text"
                    android:visibility="@{straight.expanded ? View.VISIBLE : View.GONE}"
                    app:layout_columnWeight="0" />

                <TextView
                    style="@style/player_stats"
                    android:text="@{straight.opponentTotalFouls}"
                    android:textColor="@color/primary_text"
                    android:typeface="@{straight.highlightFouls() == -1 ? `bold` : `normal`}"
                    android:visibility="@{straight.expanded ? View.VISIBLE : View.GONE}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{@string/balls_remaining(straight.ballsRemaining)}"
                    android:textSize="@dimen/player_text_size"
                    app:layout_columnSpan="3" />
            </android.support.v7.widget.GridLayout>

            <include
                layout="@layout/layout_bottom_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                bind:binder="@{straight}" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>