<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/alert_dialog_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:text="@string/title_break_help_dialog"
            android:textColor="@color/colorPrimary" />

        <TextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/one_ball"
            android:drawablePadding="16dp"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/description_ball_on_table" />

        <TextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="16dp"
            android:drawableRight="@drawable/two_ball_selected"
            android:gravity="right"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/description_ball_selected" />

        <TextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:drawableLeft="@drawable/three_ball_dead"
            android:drawablePadding="16dp"
            android:gravity="left"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/description_ball_dead" />

        <TextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="16dp"
            android:drawableRight="@drawable/four_ball_off_table"
            android:gravity="right"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="@string/description_ball_off_table" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>