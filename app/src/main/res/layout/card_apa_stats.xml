<?xml version="1.0" encoding="utf-8"?><!--suppress ALL -->
<view style="@style/card_view_style"
      class="android.support.v7.widget.CardView"
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      app:cardElevation="2dp"
      app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/title"
            layout="@layout/layout_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <GridLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:rowCount="7"
            android:useDefaultMargins="true">

            <TextView
                android:id="@+id/tvRankPlayer"
                style="@style/player_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="0"
                android:textColor="@color/primary_text"/>

            <TextView
                android:id="@+id/tvRankTitle"
                style="@style/player_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="Rank"
                android:textColor="@color/primary_text"/>

            <TextView
                android:id="@+id/tvRankOpponent"
                style="@style/player_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="0"
                android:textColor="@color/primary_text"/>

            <TextView
                android:id="@+id/tvDefensiveShotsOpponent"
                style="@style/player_stats"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_row="3"
                android:text="0"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/tvDefensiveShotsPlayer"
                style="@style/player_stats"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="3"
                android:text="0"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/tvDefensiveShotsTitle"
                style="@style/player_stats"
                android:layout_below="@+id/tvAggressivenessRating"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="3"
                android:text="Defensive shots"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/tvPlayerPoints"
                style="@style/player_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="1"
                android:text="0/0"
                android:textColor="@color/secondary_text"/>

            <TextView
                android:id="@+id/tvPointsTitle"
                style="@style/player_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:text="Points / points needed"
                android:textColor="@color/secondary_text"/>

            <TextView
                android:id="@+id/tvOpponentPoints"
                style="@style/player_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_row="1"
                android:text="0/0"
                android:textColor="@color/secondary_text"/>

            <TextView
                android:id="@+id/tvMatchPointsPlayer"
                style="@style/player_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="2"
                android:text="0"
                android:textColor="@color/primary_text"/>

            <TextView
                android:id="@+id/tvMatchPointsTitle"
                style="@style/player_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="2"
                android:text="Match points earned"
                android:textColor="@color/primary_text"/>

            <TextView
                android:id="@+id/tvMatchPointsOpponent"
                style="@style/player_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_row="2"
                android:text="0"
                android:textColor="@color/primary_text"/>

        </GridLayout>

        <GridLayout
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="8dp"
            android:useDefaultMargins="true">

            <TextView
                android:id="@+id/tvInningsTitle"
                style="@style/player_stats"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Innings"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tvInningsOpponent"
                style="@style/player_stats"
                android:layout_row="1"
                android:text="0"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tvDeadBallsTitle"
                style="@style/player_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="Dead balls"
                android:textColor="@color/secondary_text"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvDeadBallsOpponent"
                style="@style/player_stats"
                android:layout_row="2"
                android:text="0"
                android:textColor="@color/secondary_text"
                android:visibility="gone" />

        </GridLayout>

        <include
            android:id="@+id/bottom_icons"
            layout="@layout/layout_bottom_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/container2"/>

    </LinearLayout>
</view>