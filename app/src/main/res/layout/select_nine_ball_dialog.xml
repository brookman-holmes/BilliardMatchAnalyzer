<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addNewInningDialogBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        style="@style/WizardPageTitle2" />

    <GridLayout
        android:id="@+id/ballGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        android:rowCount="3"
        android:useDefaultMargins="true">


        <ImageView
            android:id="@+id/one_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/one_ball_level" />

        <ImageView
            android:id="@+id/two_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/two_ball_level" />

        <ImageView
            android:id="@+id/three_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/three_ball_level" />

        <ImageView
            android:id="@+id/four_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/four_ball_level" />

        <ImageView
            android:id="@+id/five_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/five_ball_level" />

        <ImageView
            android:id="@+id/six_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/six_ball_level" />

        <ImageView
            android:id="@+id/seven_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/seven_ball_level" />

        <ImageView
            android:id="@+id/eight_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/eight_ball_level" />

        <ImageView
            android:id="@+id/nine_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/nine_ball_level" />

    </GridLayout>
</RelativeLayout>