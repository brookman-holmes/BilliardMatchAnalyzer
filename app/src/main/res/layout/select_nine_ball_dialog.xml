<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addNewInningDialogBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/title"
        style="@style/WizardPageTitle"
        android:textSize="20sp" />

    <GridLayout
        android:id="@+id/ballGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        android:padding="16dp"
        android:rowCount="3"
        android:useDefaultMargins="true"
        android:visibility="invisible">


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/one_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/one_ball"
            app:border_color="#2196F3"

            app:shadow="true"
            app:shadow_color="#000000"
            app:shadow_radius="10" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/two_ball"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/two_ball"
            app:border_color="#2196F3"

