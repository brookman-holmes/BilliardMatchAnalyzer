<?xml version="1.0" encoding="utf-8"?><!--suppress AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute, AndroidUnknownAttribute -->
<view xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/card_view_style"
    class="android.support.v7.widget.CardView"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:columnCount="3"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:rowCount="5"
            android:useDefaultMargins="true">

            <TextView
                android:id="@+id/tvAvgBreakBallsTitle"
                style="@style/card_center_title"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="2"
                android:text="Average balls / break"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tvBreakTotalTitle"
                style="@style/card_center_title"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:text="Ball on break / breaks"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/tvBreakContinuationsTitle"
                style="@style/card_center_title"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="Continuation on break"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tvBreakScratchesTitle"
                style="@style/card_center_title"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="3"
                android:text="Scratch on break"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/tvBreakWinsTitle"
                style="@style/card_center_title"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:layout_row="4"
                android:text="9 on the break"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tvBreakTotalOpponent"
                style="@style/player_stats"
                android:layout_alignTop="@+id/tvBreakTotalPlayer"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_row="1"
                android:text="0/0"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/tvBreakWinsOpponent"
                style="@style/player_stats"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_row="4"
                android:text="0"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tvBreakContinuationsOpponent"
                style="@style/player_stats"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="0"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tvBreakScratchesOpponent"
                style="@style/player_stats"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_row="3"
                android:text="0"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/tvAvgBreakBallsOpponent"
                style="@style/player_stats"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_row="2"
                android:text="0/0"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tvBreakTotalPlayer"
                style="@style/player_stats"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="1"
                android:text="0/0"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/tvBreakWinsPlayer"
                style="@style/player_stats"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="4"
                android:text="0"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tvBreakContinuationsPlayer"
                style="@style/player_stats"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="0"
                android:text="0"
                android:textColor="@color/primary_text" />

            <TextView
                android:id="@+id/tvBreakScratchesPlayer"
                style="@style/player_stats"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="3"
                android:text="0"
                android:textColor="@color/secondary_text" />

            <TextView
                android:id="@+id/tvAvgBreakBallsPlayer"
                style="@style/player_stats"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="2"
                android:text="0/0"
                android:textColor="@color/primary_text" />
        </GridLayout>

        <include
            android:id="@+id/title"
            layout="@layout/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/bottom_icons"
            layout="@layout/card_bottom_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/container" />
    </RelativeLayout>

</view>