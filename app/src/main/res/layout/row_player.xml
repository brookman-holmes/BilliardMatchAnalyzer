<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <com.github.pavlospt.roundedletterview.RoundedLetterView
        android:id="@+id/playerIndicator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        app:rlv_backgroundColorValue="@color/colorPrimary"
        app:rlv_titleSize="28dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/playerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="Player 1"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/matchesPlayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test text 1ggg"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/gamesPlayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test text 2ggg"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shootingPctGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight=".2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shootingLine"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/circle"
                android:tint="@color/almost_good" />

            <TextView
                android:id="@+id/tvShootingPct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="6"
                android:text="Shooting .667"
                android:textColor="@color/primary_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/safetyLine"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/circle"
                android:tint="@color/almost_good" />

            <TextView
                android:id="@+id/tvSafetyPct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="6"
                android:text="Shooting 1.000"
                android:textColor="@color/primary_text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/breakingLine"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/circle"
                android:tint="@color/almost_good" />

            <TextView
                android:id="@+id/tvBreakPct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="6"
                android:text="Shooting .667"
                android:textColor="@color/primary_text" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>