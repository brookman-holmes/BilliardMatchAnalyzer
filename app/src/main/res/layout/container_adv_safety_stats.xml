<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/safetyErrorsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Safety errors"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/primary_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8dp"
        android:text="CUT"
        android:textSize="12sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:minWidth="50dp"
            android:paddingLeft="8dp"
            android:text="under"
            android:textAllCaps="true"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|right"
            android:minWidth="50dp"
            android:paddingRight="8dp"
            android:text="over"
            android:textAllCaps="true"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textView21"
            android:layout_toRightOf="@+id/textView22"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/over"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:orientation="horizontal"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/under"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="horizontal"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8dp"
        android:text="SPEED"
        android:textSize="12sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:minWidth="50dp"
            android:paddingLeft="8dp"
            android:text="fast"
            android:textAllCaps="true"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|right"
            android:minWidth="50dp"
            android:paddingRight="8dp"
            android:text="slow"
            android:textAllCaps="true"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textView24"
            android:layout_toRightOf="@+id/textView25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/slow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".23"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".77"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <include layout="@layout/divider" />

    <TextView
        android:id="@+id/successfulSafetiesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Safety results"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/primary_text" />

    <com.brookmanholmes.billiardmatchanalyzer.utils.MultiSelectionSpinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        custom:dialogTitle="Filter by starting position" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:alignmentMode="alignBounds"
        android:columnCount="3"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:useDefaultMargins="true">

        <TextView
            android:id="@+id/tvFullHook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight=".6"
            android:layout_gravity="center_vertical|left"
            android:gravity="center"
            android:text="Full hook"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvFullHookCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight=".2"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvFullHookPct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight=".2"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="-2dp"
            android:gravity="center"
            android:text="(0%)"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPartialHook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight=".6"
            android:layout_gravity="center_vertical|left"
            android:gravity="center"
            android:text="Partial hook"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPartialHookCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight=".2"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:text="0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvPartialHookPct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight=".2"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="-2dp"
            android:gravity="center"
            android:text="(0%)"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvLongT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight=".6"
            android:layout_gravity="center_vertical|left"
            android:gravity="center"
            android:text="Long T"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvLongTCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight=".2"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvLongTPct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight=".2"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="-2dp"
            android:gravity="center"
            android:text="(0%)"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvShortT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight=".6"
            android:layout_gravity="center_vertical|left"
            android:gravity="center"
            android:text="Short T"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvShortTCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight=".2"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:text="0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvShortTPct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight=".2"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="-2dp"
            android:gravity="center"
            android:text="(0%)"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight=".6"
            android:layout_gravity="center_vertical|left"
            android:gravity="center"
            android:text="Open"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvOpenCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight=".2"
            android:layout_gravity="center_vertical|right"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvOpenPct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight=".2"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="-2dp"
            android:gravity="center"
            android:text="(0%)"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />
    </GridLayout>

</LinearLayout>