<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:showIn="@layout/card_graph">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/color_indicator_c0"
        android:text="@string/title_tsp_short"
        android:textSize="14sp" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/color_indicator_c1"
        android:text="@string/title_shooting_pct_short"
        android:textSize="14sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/color_indicator_c3"
        android:text="@string/title_safety_pct_short"
        android:textSize="14sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/color_indicator_c2"
        android:text="@string/title_breaking_pct_short"
        android:textSize="14sp" />
</LinearLayout>
